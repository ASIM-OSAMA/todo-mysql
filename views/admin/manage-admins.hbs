{{> admin-navbar}}


<div class="full-width">
    <div class="content-header">
        <h1>Dashboard</h1>
    </div>

    <div class="content-header">
        <h3>Welcome (TOP LEVEL ADMIN NAME)</h3>

        <h2>MANAGE ADMINS</h2>
    </div>

    <div class="btn-add-content">
        <a href="/register" class="btn-primary">Add an Administrator</a>
    </div>

    <table class="tbl-admin">

        <tr class="tbl-heading">
            {{!-- <th>ID</th> --}}
            <th>Picture Path</th>
            <th>Role</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
            {{!-- <th>Password</th> --}}
            <th>Bio</th>
            <th>Number of Tasks</th>
            <th>Linked Accounts</th>
            <th>Account Type</th>
            <th>Created</th>
            <th colspan="3">Actions</th>
        </tr>

        {{#each allUsers}}

        <tr class="tbl-row">
            {{!-- <td>{{this.user_id}}</td> --}}
            <td>{{this.user_picture}}</td>
            <td>{{this.user_role}}</td>
            <td>{{this.user_firstname}}</td>
            <td>{{this.user_lastname}}</td>
            <td>{{this.user_username}}</td>
            <td>{{this.user_email}}</td>
            {{!-- <td>{{this.user_password}}</td> --}}
            <td>{{this.user_bio}}</td>
            <td>{{this.num_tasks}}</td>
            <td>{{this.linked_accounts}}</td>
            <td>{{this.account_type}}</td>
            <td>{{this.created}}</td>
            <td>
                <a href="#" class="btn-secondary btn-tbl">Update Administrator</a>
                <a href="#" class="btn-secondary btn-tbl">Change Password</a>
                <a href="#" class="btn-danger btn-tbl">Remove Administrator</a>
            </td>
        </tr>
        {{/each}}
    </table>

    {{!-- <a href="#" class="btn btn-secondary">Logout</a> --}}

</div>