{{> todo-navbar}}

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card border-primary card-body">

            <h1 class="text-center mb-3">
                <i class="fa-solid fa-list"></i>
                Tasks TODO
            </h1>

            {{> messages}}
            <form action="#" method="POST">

                <div class="form-group">
                    <div class="form-floating mt-2">
                        <input type="name" id="taskTitle" name="taskTitle" class="form-control"
                            placeholder="Enter First Name" value="{{taskTitle}}" required>
                        <label for="taskTitle">Task Title</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-floating mt-2">
                        <input type="name" id="taskSubtitle" name="taskSubtitle" class="form-control"
                            placeholder="Enter First Name" value="{{taskSubtitle}}">
                        <label for="taskSubtitle">Task Subtitle</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-floating mt-2">
                        <input type="name" id="taskTodo" name="taskTodo" class="form-control"
                            placeholder="Enter First Name" value="{{taskTodo}}" required>
                        <label for="taskTodo">Task Todo</label>
                    </div>
                </div>

                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">Done</label>
                </div>

                <button type="submit" class="btn btn-outline-primary mt-4">
                    Add Task
                </button>
            </form>

        </div>
    </div>
</div>
</div>
</div>
</div>